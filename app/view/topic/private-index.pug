extends ../layout/private
include ../mixin/search-form
include ../mixin/pagination

block title
  title トピックの一覧｜技術ブログ管理システム

block breadcrumb
  nav.mt-3.mb-3(aria-label='パンくずリスト')
    .container
      ol.breadcrumb.mb-0
        li.breadcrumb-item
          a(href='../') ホーム
        li.breadcrumb-item
          a(href='./' aria-current='page') トピック

block main
  main
    .container
      h1 トピックの一覧
      nav.mt-3(aria-label='メニュー')
        .d-flex.flex-wrap.gap-2
          a.btn.btn-outline-secondary(href='../') 戻る
          a.btn.btn-outline-primary(href='./add/') 登録...
      +search-form(layout.req.query.keyword)
      +page-summary(summary)
      if topics.length >= 1
        nav.mt-3(aria-label='リスト')
          .list-group
            each topic in topics
              a.list-group-item.list-group-item-action(href=`./${topic.id}/`)
                | #{topic.title}
        +pagination(pagination)
