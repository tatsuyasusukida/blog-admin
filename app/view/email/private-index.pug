extends ../layout/private
include ../mixin/search-form
include ../mixin/pagination

block title
  title メール送信履歴の一覧｜技術ブログ管理システム

block breadcrumb
  nav.mt-3.mb-3(aria-label='パンくずリスト')
    .container
      ol.breadcrumb.mb-0
        li.breadcrumb-item
          a(href='../') ホーム
        li.breadcrumb-item
          a(href='./' aria-current='page') メール送信履歴

block main
  main
    .container
      h1 メール送信履歴の一覧
      nav.mt-3(aria-label='メニュー')
        .d-flex.flex-wrap.gap-2
          a.btn.btn-outline-secondary(href='../') 戻る
      +search-form(layout.req.query.keyword)
      +page-summary(summary)
      nav.mt-3(aria-label='リスト')
        .list-group
          each email in emails
            a.list-group-item.list-group-item-action(href=`./${email.id}/`)
              | #{email.dateText} <br>
              | #{email.toName} &lt;#{email.toEmail}&gt; <br>
              | #{email.subject}
        +pagination(pagination)
